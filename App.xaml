<Application x:Class="BoginyaJournal.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             >
    <Application.Resources>
    
            <Style TargetType="TextBlock" x:Key="MyFontText">
                <Setter Property="FontSize" Value="25" />
            </Style>
        <Style TargetType="Control" x:Key="MyFont">
            <Setter Property="FontSize" Value="25" />
        </Style>
        <Style TargetType="Button" BasedOn="{StaticResource MyFont}" />
            <Style TargetType="TextBox" BasedOn="{StaticResource MyFont}" />
            <Style TargetType="PasswordBox" BasedOn="{StaticResource MyFont}" />
            <Style TargetType="ComboBox" BasedOn="{StaticResource MyFont}" />
            <Style TargetType="Label" BasedOn="{StaticResource MyFont}" />
            <Style TargetType="TextBlock" BasedOn="{StaticResource MyFontText}" />
    </Application.Resources>
</Application>
